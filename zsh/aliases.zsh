# System
alias shutdown='sudo shutdown now'
alias restart='sudo reboot'
alias suspend='sudo pm-suspend'
alias sleep='pmset sleepnow'

# List all with colors
alias ls='ls -la --color'

# Neovim
alias v='nvim'
alias vim='nvim'

# Remove a directory
alias rmd='rm -rf'

# Clear and Exit
alias c='clear'
alias e='exit'
